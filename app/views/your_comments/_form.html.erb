
<%= form_with(model: [ @company, @company.your_comments.build ], remote: true, id: "create-comment-form") do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>


<% end %>